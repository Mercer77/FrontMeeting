<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="新闻"
        android:textColor="@color/title"
        android:textSize="20sp"
        android:gravity="center"
        android:background="@color/themecolor"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="新闻标题"
        android:textStyle="bold"
        android:textColor="#121111"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_marginTop="10dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2019-2-1 21:23:32"
        android:gravity="right"
        android:textColor="#433f3f"
        android:layout_marginTop="5dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#312e2e"
        android:layout_marginTop="5dp"/>
    <ImageView
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        android:layout_marginTop="5dp"
        android:src="@drawable/headimg"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="        是独立善良的江苏旷达江苏科技可是大家可视对讲建设靠大家看似简单思考角度看手机打开数据库大街上看见开始上课的看手机打开设计"
        android:lineSpacingExtra="10sp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="关键字： 胜点   胜点"
        android:textStyle="bold"
        android:paddingLeft="5dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="责任编辑：张三"
        android:gravity="right"
        android:textStyle="bold"
        android:paddingRight="5dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#312e2e"
        android:layout_marginTop="5dp"/>

</LinearLayout>